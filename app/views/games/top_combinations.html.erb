<%= link_to 'Back', games_path %>
<div class='row'>
  <div class='col-md-4'>
    <h4>Top Combos</h4>
    <table class='table table-condensed'>
      <% Combo.top(20).each do |combo| %>
        <tr>
          <td><%= combo.map.name %></td>
          <td><%= combo.weapon_set.name %></td>
          <td><%= combo.games.count %></td>
          <td class='paul <%= 'bold' if combo.current_winner == 'Paul' %>'><%= number_with_precision combo.win_percentage(:paul), precision: 0%>%</td>
          <td class='oli <%= 'bold' if combo.current_winner == 'Oli' %>'><%= number_with_precision combo.win_percentage(:oli), precision: 0 %>%</td>
        </tr>
      <% end %>
      Total: <%= Combo.top(20).inject(0) {|sum, combo| sum += combo.games.count; sum } %> / <%= Game.count %>
    </table>
  </div>


</div>
