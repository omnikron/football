<%= form_for([@game, @note]) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :game_id, value: @game.id %>
  <div class="field">
    <%= f.label :player_id, 'Author' %>
    <% players = Player.all.map {|player| [player.name, player.id] } %>
    <% disabled = f.object.player.try(:id).present? ? Player.where.not(id: f.object.player.id).map(&:id) : Player.where(id: @game.notes.select(:player_id)).map(&:id) %>
    <%= f.select :player_id, options_for_select(players, disabled: disabled, selected: @note.player.try(:id)), required: true %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, rows: 10, style: "width: 500px;" %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
